@model Flow_Finance.Models.RegisterModel

@{
    ViewData["Title"] = "Registration";
}

<div class="container mt-5">
    <div class="row">
        <!-- Left section with form -->
        <div class="col-md-6 p-4" style="background-color: #e6ebf3; border-radius: 10px;">
            <h2 class="text-dark mb-4">Registration</h2>

            <!-- Validation summary to show model-level errors -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <form asp-action="Registration">
                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter Email Address here" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter Password here" />
                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword(this)" data-group="password-group">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
                        <button class="btn btn-outline-secondary" type="button" onclick="togglePassword(this)" data-group="password-group">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <input type="submit" value="Register" class="btn btn-primary btn-lg w-100" style="background-color: #46399e; border: none;" />
                </div>
            </form>
        </div>

        <!-- Right section with the image -->
        <div class="col-md-6 p-4 d-flex align-items-center justify-content-center" style="background-color: #e0eaf3; border-radius: 10px;">
            <img src="~/images/icons.jpg" class="img-fluid" alt="Finance icons" style="max-width: 100%; height: auto; border-radius: 10px;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<script>
    function togglePassword(button) {
        const input = button.parentElement.querySelector('input');
        const icon = button.querySelector('i');

        if (input.type === 'password') {
            input.type = 'text';
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
        } else {
            input.type = 'password';
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
        }
    }
</script>