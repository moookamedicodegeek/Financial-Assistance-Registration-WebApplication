@model Flow_Finance.Models.UserModel

@{
    ViewData["Title"] = "Delete Profile";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
            <h2 class="text-2xl font-bold text-red-600 mb-6">Delete Profile Confirmation</h2>

            <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
                <p class="text-red-700 font-medium">Are you sure you want to delete your profile?</p>
                <p class="text-red-600 mt-2">This action will:</p>
                <ul class="list-disc list-inside text-red-600 mt-2">
                    <li>Delete your profile information</li>
                    <li>Remove your account access</li>
                    <li>This action cannot be undone</li>
                </ul>
            </div>

            <dl class="mb-6">
                <dt class="font-medium text-gray-700">Name</dt>
                <dd class="mt-1 text-gray-900 mb-3">@Model.Name @Model.Surname</dd>

                <dt class="font-medium text-gray-700">Email</dt>
                <dd class="mt-1 text-gray-900 mb-3">@Model.Email</dd>
            </dl>

            <form asp-action="Delete" method="post" class="space-y-4">
                <input type="hidden" asp-for="Uid" />
                @Html.AntiForgeryToken()

                <div class="flex space-x-4">
                    <button type="submit"
                            class="text-white px-4 py-2 rounded hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
                            style="background-color: #dc2626;">
                        Delete Account
                    </button>

                    <a asp-action="Details" asp-route-id="@Model.Uid" class="bg-gray-100 text-gray-700 px-4 py-2 rounded hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
